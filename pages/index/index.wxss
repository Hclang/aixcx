.home{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding-top: 40rpx;
  box-sizing: border-box;
}
.frame_view{
  bottom: 160rpx;
  left: 60rpx;
  right: 60rpx;
  --width:590rpx;
  --height:850rpx;
  padding: 20rpx;
  --background: #9b9b9b;
  z-index: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  border-radius: 30rpx;
}
.frame_row{
  width:95%;
  --width:580rpx;
  --height:280rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
} 

.frame_item{
  width: 48%;
  --width:280rpx;
  height:300rpx;
  margin-bottom: 20rpx;
  background-color: cornsilk;
  --display: flex;
  justify-content: center;  
  align-items: center;  
  border-radius: 30rpx;
  overflow: hidden;    
  position: relative;
  background-color: rgb(51, 151, 238);  
}

.frame_item .frame_item_image{
  height: 80%;
  padding:10rpx;
}

.frame_item_top{
  width:100%;
  height:500rpx;
  margin-bottom: 20rpx;
  justify-content: center;  
  align-items: center;
  border-radius: 30rpx;
  overflow: hidden;    
  position: relative;
  background-color: rgb(51, 151, 238);  
}
.frame_item_top .frame_item_image{
  height: 60%;
  padding:10rpx;
}
.frame_item_image image {
  height: 100%;
  width: 100%;
  border-radius: 30rpx;
  overflow: hidden;   
}
.frame_item_top .frame_item_title{
  bottom:32%;
}

.frame_item_title{
  position:absolute;
  bottom: 10%;
  --color:rgb(51, 151, 238);  
  background-color: rgb(255, 255, 255);
  border-radius: 20rpx;
  width:200rpx;
  text-align: center;
  left:10%;
}
.frame_item_detail {
  padding: 20rpx 20rpx;
  color:white;
}

.item-color1{
  color:rgb(51, 151, 238);
  background-color: rgb(51, 151, 238);
}

.item-color2{
  color:#CDAD00;
  background-color: #CDAD00;
}

.item-color3{
  color:#3A5FCD;
  background-color: #3A5FCD;
}

.item-color4{
  color:#DDA0DD;
  background-color: #DDA0DD;
}

.item-color5{
  color:#66CD00;
  background-color: #66CD00;
}