/**index.wxss**/
.personal {
  height: 100%;
  position:relative;
  /* display: flex; */
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.bottom{
  display:flex;
  position:fixed;
  bottom: 0;
  width:100%;
  align-items: center;
  justify-content: center;
  /* background-color: #3A5FCD; */
}

.bottom view{
  /* background-color: aquamarine; */
  color: #707070;
  padding:0 10rpx;
  font-size: small;
}
.userinfo {
  display: flex;
  padding: 100rpx 0;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  background-color: #3A5FCD;
  width:100%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}



.list-item{
  display: flex;
  height: 100rpx;
  border-bottom: 1px solid #e9e9e9;
  align-items: center;
}

.hover {
  background: #f2f2f2;
}

.text {
  flex: 1;
  font-size: 32rpx;
  color: #707070;
}

.next {
  width: 36rpx;
  margin-right: 25rpx;
}

.type-icon {
  width: 36rpx;
  margin: 0 25rpx;
}